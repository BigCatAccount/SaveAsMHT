{
  "manifest_version": 2,
  "name": "Save As MHT",
  "short_name": "SaveAsMHT",
  "version": "0.0.8",
  "description": "Save page as single .MHT file.",
  "icons": {
    "128": "mht.png"
  },
  "homepage_url": "https://github.com/vsDizzy/SaveAsMHT",
  "background": {
    "persistent": false,
    "scripts": [
      "promisify.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "mht.png"
    }
  },
  "permissions": [
    "contextMenus",
    "downloads",
    "pageCapture",
    "tabs",
    "storage"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S"
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}